{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "npmClient": "npm",
      "allowBranch": [
        "lerna/pub",
        "lerna/pub-*"
      ],
      "ignoreChanges": ["stories/**", "tests/**", "*.md"],
      "message": "build: lerna publish"
    }
  }
}
